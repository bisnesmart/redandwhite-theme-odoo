<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<!-- Esta vista sobreescribe la vista del foooter que utilizan los informes de Odoo para meter la
personalizada para powerworks con el fondo rojo y la fuente blanca -->
<template id="report_footer_power" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                	 <div class="footer" style="color:#FFFFFF; width:100%; height:100px; background-image:url('/power_reports/static/src/img/fondo.png');">

                	 	<div class="text-center" style="padding-top:30px; font-weight:bold; font-size: 10px;" >
                	 		<ul t-if="not company.custom_footer" class="list-inline">
                        <li> <span t-field="company.name"/></li>
                      </ul>
                      <ul t-if="not company.custom_footer" class="list-inline">
                        <li> <span t-field="company.street"/></li> <li> - <span t-field="company.city"/></li> <li> - <span t-field="company.zip"/></li>
                        <li t-if="company.phone">Phone: <span t-field="company.phone"/></li> <li t-if="company.fax and company.phone">&amp;bull;</li> <li t-if="company.fax">Fax: <span t-field="company.fax"/></li>
                        <li t-if="company.email">&amp;bull;</li> <li t-if="company.email">Email: <span t-field="company.email"/></li> <li>CIF: <span t-field="company.vat"/></li>
                      </ul>
                	 		<t t-if="company.custom_footer"> <span t-raw="company.rml_footer"/> </t> <ul class="list-inline"> <li/>
                	 			<li> <span class="page"/> </li>
                	 			<li>/</li>
                	 			<li> <span class="topage"/> </li>
                	 		</ul>
                	 	</div>
                	 </div>
                </div>
            </xpath>
 </template>
</data>
</openerp>
